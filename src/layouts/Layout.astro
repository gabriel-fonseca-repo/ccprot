		font-family: "Metropolis";
		src: url("/ccprot/fonts/Metropolis/Metropolis-Bold.woff2") format("woff2"), url("/ccprot/fonts/Metropolis/Metropolis-Bold.woff") format("woff");
		font-weight: bold;
		font-style: normal;
		font-display: swap;
	}

	:root {
		--white-color: #ffffff;
		--primary-color: #5bc1ac;
		--secondary-color: #5a8069;
		--section-bg-color: #f0f8ff;
