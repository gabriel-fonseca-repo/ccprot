		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Metropolis";
		src: url("/ccprot/fonts/Metropolis/Metropolis-Light.woff2") format("woff2"), url("/ccprot/fonts/Metropolis/Metropolis-Light.woff") format("woff");
		font-weight: 300;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Metropolis";
		src: url("/ccprot/fonts/Metropolis/Metropolis-SemiBold.woff2") format("woff2"), url("/ccprot/fonts/Metropolis/Metropolis-SemiBold.woff") format("woff");
		font-weight: 600;
		font-style: normal;
